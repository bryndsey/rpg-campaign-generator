---
  import OutputDisplay from "./OutputDisplay.svelte";
  import InputControls from "./InputControls.svelte";
  import Disclaimer from "./Disclaimer.svelte";
  import Footer from "./Footer.svelte";
  import icon from "./D20.svg"
---

<div
  class="m-auto flex h-dvh max-h-dvh flex-col overflow-y-clip p-4 landscape:px-8 gap-4"
>
  <header>
    <h1 class="text-lg landscape:text-2xl">RPG Campaign Generator <img src={icon.src} class="inline-block h-[1em]" alt="" /></h1>
  </header>
  <main class="flex flex-1 flex-col gap-4 overflow-y-clip landscape:flex-row">
    <div class="flex flex-1 place-items-stretch overflow-y-clip">
      <OutputDisplay client:load/>
    </div>
    <div class="w-full landscape:max-w-xs flex flex-col">
      <InputControls class="flex-1" client:load />
      <div class="self-end">
        <Disclaimer client:load />
      </div>
    </div>
  </main>
</div>
